{
  "name": "deAuctions",
  "version": "0.1.0",
  "description": "template to build smart contract with hardhat & typescript",
  "repository": "github.com/donBarbos/hardhat-template",
  "license": "MIT",
  "author": "donBarbos <donbarbos@proton.me>",
  "keywords": [
    "ethereum",
    "blockchain",
    "smart-contracts",
    "solidity",
    "hardhat",
    "typescript",
    "dapp"
  ],
  "scripts": {
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.ts",
    "verify": "hardhat verify",
    "accounts": "hardhat accounts",
    "size": "hardhat size-contracts",
    "typechain": "hardhat typechain",
    "test": "hardhat test --network hardhat",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"test/**/*.ts\" && yarn typechain",
    "prepare": "husky install",
    "commit": "cz",
    "lint": "yarn lint:sol && yarn lint:ts && yarn prettier:check",
    "lint:fix": "yarn lint:sol:fix && yarn lint:ts:fix && yarn prettier",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 5 \"contracts/**/*.sol\"",
    "lint:sol:fix": "yarn lint:sol --fix",
    "lint:ts": "eslint --config ./.eslintrc --ignore-path ./.eslintignore --ext .js,.ts .",
    "lint:ts:fix": "yarn lint:ts --fix",
    "prettier": "prettier --config ./.prettierrc --write \"**/**/*.{js,json,md,sol,ts,yml}\"",
    "prettier:check": "yarn prettier --check",
    "clean": "rimraf ./artifacts ./contracts/artifacts ./contracts/interfaces/artifacts ./cache ./coverage ./typechain-types ./coverage.json"
  },
  "lint-staged": {
    "*.sol": [
      "prettier --config ./.prettierrc --write",
      "yarn lint:sol"
    ],
    "*.{js,ts}": [
      "prettier --config ./.prettierrc --write",
      "yarn lint:ts:fix"
    ],
    "{*.{json,md,yml}}": [
      "prettier --config ./.prettierrc --write"
    ]
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.4.7",
    "@ethersproject/providers": "^5.4.7",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^1.0.1",
    "@nomiclabs/hardhat-ethers": "^2.2.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.1",
    "@nomiclabs/hardhat-solhint": "^2.0.1",
    "@openzeppelin/contracts": "^4.7.3",
    "@openzeppelin/hardhat-upgrades": "^1.20.0",
    "@trivago/prettier-plugin-sort-imports": "^3.4.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": ">=18.11.19",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "chai": "^4.2.0",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.0",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-dependency-compiler": "^1.1.3",
    "hardhat-gas-reporter": "^1.0.8",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.5",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "ts-node": ">=8.0.0",
    "typechain": "^8.1.0",
    "typescript": ">=4.5.0"
  },
  "files": [
    "./contracts"
  ],
  "packageManager": "yarn@3.2.1",
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
